#include <stdio.h>
#include <strings.h>
#include <ctype.h>


int main(int argc, char *argv[]){

  int i;

  if(argc >1 && strcmp(argv[1], "-u") == 0){
    while((i = getchar()) != EOF){
      int outch = toupper(i);

      putchar(outch);
    }
  }

  else if(argc >1 && strcmp(argv[1],"-l") == 0){
    while((i = getchar()) != EOF){
      int outch = tolower(i);

      putchar(outch);
    }
  }
 
  else if(argc == 1){   
  while((i = getchar()) != EOF){
    int outch = i;

    putchar(outch);
  }
  }


  else {
    printf("Invalid command line option");
    perror(argv[1]);
    printf("\n");
  }



    
  return 0;
}
